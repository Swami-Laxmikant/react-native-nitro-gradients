{
  "name": "react-native-nitro-gradient-monorepo",
  "packageManager": "bun@1.1.42",
  "private": true,
  "version": "0.1.0",
  "repository": "https://github.com/Swami-Laxmikant/react-native-nitro-gradients.git",
  "author": "Laxmikant Swami <lxmkntgswami@gmail.com>",
  "workspaces": [
    "packages/react-native-nitro-gradient",
    "example",
    "docs"
  ],
  "scripts": {
    "run:android": "bun run --cwd example android",
    "build": "bun run --cwd packages/react-native-nitro-gradient build",
    "specs": "bun run --cwd packages/react-native-nitro-gradient specs",
    "bootstrap": "bun i && bun run build && cd example && bundle install && bun pods",
    "typecheck": "bun --filter=\"**\" typecheck",
    "lint": "bun gradient lint",
    "lint-ci": "bun gradient lint-ci",
    "clean": "git clean -dfx",
    "release": "./scripts/release.sh",
    "gradient": "bun --cwd packages/react-native-nitro-gradient",
    "example": "bun --cwd example",
    "docs": "npm --prefix docs start",
    "docs:build": "npm --prefix docs run build"
  },
  "devDependencies": {
    "@release-it-plugins/workspaces": "^5.0.3",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.1",
    "@tsconfig/react-native": "^2.0.3",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.8",
    "prettier": "^3.6.2",
    "react": "19.1.0",
    "react-native": "0.81.0",
    "react-native-builder-bob": "^0.37.0",
    "release-it": "^19.0.4",
    "typescript": "5.8.3"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "hooks": {
      "before:release": "bun i && bun run build && bun example pods && git add example/ios/Podfile.lock"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          {
            "file": "packages/react-native-nitro-gradient/package.json",
            "path": "version"
          },
          {
            "file": "example/package.json",
            "path": "version"
          }
        ]
      },
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "perf",
              "section": "üí® Performance Improvements"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "chore(deps)",
              "section": "üõ†Ô∏è Dependency Upgrades"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            }
          ]
        }
      }
    }
  }
}
